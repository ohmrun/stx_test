{
  "build" : {
    "-lib"  : ["tink_core","hx3compat","stx_pico","stx_nano","stx_fn","stx_assert"],
    "-D"    : [
      "no-deprecation-warnings",
      "stx.log.filter.show=true"
    ],
    "-cp"  :  ["src/main/haxe"],
    "unit" : {
      "--macro" : [
        "include('stx.Test',true)",
        "include('stx.test',true)"
      ],
      "interp" : {
        "--interp" : true
      }
    },
    "test" : {
      "-main"     : "stx.test.Test",
      "interp"  : {
        "--interp"  : true
      } 
    },
    "test_meta_gets" : {
      "-main" : "TestMetaGets",
      "--interp" : true 
    },
    "boot" : {
      "-D" : ["stx.boot"],
      "interp" : {
        "--interp" : true
      }
    }
  }
}
