{
  "build" : {
    "-resource" : ["tests.pml@tests"],
    "-lib"  : ["tink_core","stx_pico","stx_nano","stx_fn","stx_assert","fletcher","stx_config","stx_asys","spil","stx_show","equals"],
    "-D"    : [
      "no-deprecation-warnings",
      "stx.log.filter.show=false"
    ],
    "-cp"  :  ["src/main/haxe"],
    "unit" : {
      "--macro" : [
        "include('stx.Test',true)",
        "include('stx.test',true)"
      ],
      "interp" : {
        "--interp" : true
      }
    },
    "test" : {
      "-main"     : "stx.test.Test",
      "interp"  : {
        "--interp"  : true
      } 
    },
    "test_meta_gets" : {
      "-main" : "TestMetaGets",
      "--interp" : true 
    },
    "boot" : {
      "-D" : ["stx.boot"],
      "interp" : {
        "--interp" : true
      }
    },
    "test.reader" : {
      "--macro" : [
        "include('stx.Test',true)",
        "include('stx.test',true)"
      ],
      "--main"    : "ReaderTest",
      "--interp"  : true,
      "-D"        : "stx.config.Resource=tests"
    },
    "features" : {
      "new_test_reader" : {
        "--interp" : true,
        "--main"  : "TestNewReader"
      }
    } 
  }
}